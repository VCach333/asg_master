 

<div class="container">
    <div class="row">
        <h4 class="upper titulo">
            <i class="bx bx-category-alt primary-text"></i>
            Categorias
        </h4>
        <hr>
        {{#if admin}}
        <a class="btn right" href="/admin/categorias/cadastro">
            <i class="bx bx-plus"></i>
        </a>
        {{/if}}
    </div>

    <div class="row">
        {{#if admin}}
        {{#each cats}}
        <div class="col s10 m4 push-s1">
            <div class="card transparent">
                <div class="card-content">
                    <span class="card-title activator truncate">
                        <i class="bx bx-chevron-up"></i>
                        {{titulo}}
                    </span>
                    <blockquote class="truncate">
                        <span>
                            {{desc}}
                        </span>
                    </blockquote>
                </div>
                <div class="card-action">
                    <a></a>
                    <a href="/categorias/ver/{{_id}}" class="btn waves-effect right">
                        <i class="bx bx-chevron-right"></i>
                    </a>
                </div>
                <div class="card-reveal">
                    <span class="card-title activator truncate center">
                        <i class="bx bx-x"></i> <br>
                        {{titulo}}
                    </span>

                    <textarea readonly aria-expanded="true" class="materialize-textarea">{{desc}}</textarea>

                    <a href="/admin/categorias/edit/{{_id}}" class="btn waves-effect">
                        <i class="bx bx-pen"></i>
                    </a>

                    <form action="/admin/categorias/delete/{{_id}}" method="post">
                        <button type="submit" class="btn transparent no-hover waves-effect waves-red red-text right top-35-"><i class="bx bx-trash"></i></button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col s10 m4 push-s1 push-m4">
            <div class="card blue-grey darken-3 white-text">
                <div class="card-content">
                    <span class="card-title">Sem Categorias</span>
                    <blockquote class="top-20">
                        <span>Não há Categorias. Após Cadastra-las, aparecerão aqui</span>
                    </blockquote>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        {{#each cats}}
        <div class="col s10 m4 push-s1">
            <div class="card transparent">
                <div class="card-content">
                    <span class="card-title truncate">{{titulo}}</span>
                    <blockquote class="truncate">
                        <span>
                            {{desc}}
                        </span>
                    </blockquote>
                </div>
                <div class="card-action">
                    <a></a>
                    <a href="/categorias/ver/{{_id}}" class="btn right">
                        <i class="bx bx-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col s10 m4 push-s1 push-m4">
            <div class="card blue-grey darken-3 white-text">
                <div class="card-content">
                    <span class="card-title">Sem Categorias</span>
                    <blockquote class="top-20">
                        <span>Não há Categorias. Brevemente os Administradores Cadastrarão</span>
                    </blockquote>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}

    </div>
</div>