<div class="container">
    <div class="row">
        <div class="col s10 push-s2 m6 push-m2">
            {{#if success_msg}}
                <div id="hide_3s" class="success_msg msg_float green lighten-2 white-text center" style="width: 50% !important;">
                    <p class="flash-msg">
                        {{success_msg}}
                    </p>
                </div>
            {{/if}}

            {{#if error_msg}}
                <div id="hide_3s" class="error_msg msg_float red lighten-2 white-text center" style="width: 50% !important;">
                    <p class="flash-msg">
                        {{error_msg}}
                    </p>
                </div>
            {{/if}}
        </div>
    </div>
</div>